<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="640.0" minWidth="820.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.PrimaryController">
    <!-- NavBar -->
    <top>
        <HBox alignment="CENTER" spacing="100.0" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
         <Button style="-fx-font-size: 28px; -fx-background-color: #2C3E50; -fx-text-fill: white; -fx-font-weight: bold;" text="Universitetsbibliotek" />

            <Button style="-fx-font-size: 16px; -fx-background-color: #3498DB; -fx-text-fill: white;" text="Sök objekt" />

            <Button onAction="#handleLogin" style="-fx-font-size: 16px; -fx-background-color: #3498DB; -fx-text-fill: white;" text="Logga in" />
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </HBox>
    </top>
    
    <!-- Huvudinnehåll -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>
        </VBox>
    </center>
    
    <!-- Statusfält -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #BDC3C7; -fx-padding: 10 10 10 10;">
            <Label fx:id="statusLabel" style="-fx-font-size: 14px;" text="" />
        </HBox>
    </bottom>
</BorderPane>
