<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="640.0" minWidth="820.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controller.MainViewController">
    <!-- NavBar -->
    <top>
        <fx:include source="NavBar.fxml"/>
    </top>
    
    <!-- Huvudinnehåll -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>
         <children>
            <HBox alignment="CENTER" prefHeight="420.0" prefWidth="760.0" spacing="100.0">
               <children>
                  <Button contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#btnSearch" prefHeight="150.0" prefWidth="150.0" style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-font-size: 14px;" text="Sök">
                     <graphic>
                        <Pane prefHeight="120.0" prefWidth="140.0" style="-fx-background-color: #FFFFFF;">
                           <children>
                              <Label layoutX="5.0" layoutY="23.0" prefHeight="75.0" prefWidth="130.0" text="Sök på tillgängligt material som finns i biblioteket" wrapText="true" />
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Pane>
                     </graphic>
                  </Button>
                  <Button contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#pressButton" prefHeight="150.0" prefWidth="150.0" style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-font-size: 14px;" text="Om oss">
                     <graphic>
                        <Pane prefHeight="120.0" prefWidth="140.0" style="-fx-background-color: #FFFFFF;">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <children>
                              <Label layoutX="5.0" layoutY="23.0" prefHeight="75.0" prefWidth="130.0" text="Sök på tillgängligt material som finns i biblioteket" wrapText="true" />
                           </children>
                        </Pane>
                     </graphic>
                  </Button>
                  <Button fx:id="profileButton" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#btnProfile" prefHeight="150.0" prefWidth="150.0" visible="false" managed="false" style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-font-size: 14px;" text="Profil">
                     <graphic>
                        <Pane prefHeight="120.0" prefWidth="140.0" style="-fx-background-color: #FFFFFF;">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <children>
                              <Label layoutX="5.0" layoutY="23.0" prefHeight="75.0" prefWidth="130.0" text="Gå till din profil" wrapText="true" />
                           </children>
                        </Pane>
                     </graphic>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
        </VBox>
    </center>
</BorderPane>
